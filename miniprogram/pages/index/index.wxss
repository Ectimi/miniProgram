.wrapper{
  position: relative;
  width:100%;
  height:100%;
  background-color: #fff;
}

.des{
  display: flex;
  justify-content: center;
  align-items: center;
  width:80%;
  height: 50%;
  margin-top: 100rpx;
  margin:100rpx auto 50rpx;
  padding:20rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 5rpx 5rpx rgb(235, 231, 231);
  background-color: rgb(255, 253, 253);
  color:rgb(51, 51, 51);
}

.tip{
  text-align: center;
  color:rgb(197, 196, 196);
}

.btn-box{
  position: fixed;
  left:0;
  bottom:20rpx;
  display: flex;
  justify-content: space-around;
  width:100%;
  height: 100rpx;
}

.button{
  width:40%;
  border-radius: 20rpx;
  line-height: 100rpx;
  text-align: center;
  box-shadow: 0rpx 0rpx 5rpx 5rpx rgb(235, 231, 231);
  background-color: white;
  color:rgb(51, 51, 51);
}